{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "LF",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "rootDir": ".",
    "outDir": "./",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "api-typescript": [
        "./src/index.ts"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-snapshots-plugin",
        "snapshotCallIdentifiers": [
          "toMatchSnapshot",
          "toThrowErrorMatchingSnapshot",
          "toMatchDiffSnapshot"
        ]
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}