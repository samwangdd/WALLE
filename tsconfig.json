{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "LF",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "api-typescript": ["./src/index.ts"]
    },
    "plugins": [
      {
        "name": "typescript-snapshots-plugin",
        "snapshotCallIdentifiers": ["toMatchSnapshot", "toThrowErrorMatchingSnapshot", "toMatchDiffSnapshot"]
      }
    ]
  },
  "exclude": ["src/api"]
}
